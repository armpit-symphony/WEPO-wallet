<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive wallet data from cloud backup -->
        <exclude domain="sharedpref" path="wepo_wallet_prefs"/>
        <exclude domain="database" path="wepo_wallet.db"/>
        <exclude domain="sharedpref" path="encrypted_prefs"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow basic app data transfer but exclude sensitive data -->
        <exclude domain="sharedpref" path="wepo_wallet_prefs"/>
        <exclude domain="database" path="wepo_wallet.db"/>
        <exclude domain="sharedpref" path="encrypted_prefs"/>
    </device-transfer>
</data-extraction-rules>